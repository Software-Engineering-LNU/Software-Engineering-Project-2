@model EmployeestWeb.DAL.Models.User
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthorizationLayout.cshtml";
}
<style>
    .section {
        color: #5A5A5A;
        font-family: Arial;
        margin: 5% 40%;
        font-size: 14px;
    }
    .title {
        font-size: 24px;
        text-align: center;
    }
    label {
        margin: 15px 0 0;
    }
    input {
        width: 100%;
    }

    .navigationItem {
        margin: 5px 0 20px;
    }
    .navigationItem a {
        color: #5A5A5A;
        font-weight: bold;
        text-decoration: underline;
    }
    .button {
        background-color: #5A5A5A;
        color: #FFFFFF;
        width: 100%;
        padding: 5px 0;
    }


</style>

<form class="section" asp-action="SignIn">
    <h1 class="title">Log in</h1>
    <section>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" />
    </section>
    <section>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" />
    </section>
    <nav class="navigationItem">
        <span>Don’t have an account?</span>
        <a asp-area="" asp-controller="Authorization" asp-action="SignUp">Sign up</a>
    </nav>
    <input class="button" type="submit" value="Log in" />
</form>

