@model AddEmployeeViewModel

<link href="@Url.Content("~/wwwroot/css/site.css")" rel="stylesheet" type="text/css" />
<div class="add-employee-form">
    @Html.ValidationSummary()
    <form asp-action="AddEmployee" asp-controller="Worker" method="post">

        <div class="form-group">
            <label asp-for="Email" class="add-employee-label"></label>
            <input asp-for="Email" class="add-employee-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="add-employee-label"></label>
            <input asp-for="Password" class="add-employee-input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName" class="add-employee-label"></label>
            <input asp-for="FullName" class="add-employee-input" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="add-employee-label"></label>
            <input asp-for="PhoneNumber" class="add-employee-input" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsBussinessOwner" class="add-employee-label"></label>
            <select asp-for="IsBussinessOwner" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="IsBussinessOwner" class="text-danger"></span>
        </div>

        <button type="submit" class="add-employee-btn">Add Employee</button>
    </form>
</div>